<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherApp.Views.WeatherView"
             Title=""
             BackgroundColor="#1F1F1F">
    <VerticalStackLayout Padding="20" Spacing="20">
        <Grid RowDefinitions="Auto, Auto, Auto, Auto" ColumnDefinitions="2*, 3*">
            <Grid Grid.ColumnSpan="2" Padding="0,0,0,20">
                <Border Stroke="#3E3E3E" StrokeThickness="2" BackgroundColor="#303030" HeightRequest="44" StrokeShape="RoundRectangle 5">
                    <Grid ColumnSpacing="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Entry 
                            Grid.Column="0"
                            Placeholder="Digite o nome da cidade"
                            BackgroundColor="Transparent"
                            TextColor="#FFFFFF"
                            FontFamily="JejuGothic-Regular"
                            PlaceholderColor="#6B6B6B"
                            Margin="10, 0" />
                        <Button 
                            Grid.Column="1"
                            Text="Confirmar"
                            BackgroundColor="#3E3E3E"
                            TextColor="#9E9E9E"
                            Padding="20, 0"
                            FontFamily="JejuGothic-Regular"
                            VerticalOptions="Center"
                            Margin="5, 0, 0, 0"
                            CornerRadius="0" />
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <Grid ColumnDefinitions="0.5*, 0.9*" Margin="0, -25, 0, 0">
            <Label
                Text="Clima"
                TextColor="#9E9E9E"
                FontSize="14"
                FontFamily="JejuGothic-Regular"
                HorizontalOptions="Start"
                VerticalOptions="Center"/>

            <Label
                Text="Main"
                TextColor="#9E9E9E"
                FontSize="14"
                FontFamily="JejuGothic-Regular"
                HorizontalOptions="Start"
                VerticalOptions="Center"
                Grid.Column="1"/>
        </Grid>

        <Grid ColumnDefinitions="Auto, Auto" Padding="0,-20,0,0" Margin="0, 5, 0, 0">
            <Frame
                BackgroundColor="#2C2C2C"
                Padding="15"
                HorizontalOptions="Start"
                VerticalOptions="Center"
                CornerRadius="0"
                BorderColor="#2E2E2E"
                HasShadow="False"
                WidthRequest="250"
                HeightRequest="270">
                <Grid RowDefinitions="Auto, Auto, Auto, Auto" RowSpacing="10">
                    <Image
                        Grid.Row="0"
                        Source="a50n.png"
                        WidthRequest="150"
                        HeightRequest="120"
                        HorizontalOptions="Center"
                        VerticalOptions="Center" />
                    <Frame
                        Grid.Row="1"
                        BackgroundColor="#22854B"
                        HorizontalOptions="Center"
                        Padding="5, 2"
                        CornerRadius="0"
                        WidthRequest="180"
                        HeightRequest="40"
                        Margin="0, -20, 0, 0"
                        BorderColor="#18762C">
                        <Label
                            Text="Clouds"
                            TextColor="White"
                            FontSize="16"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            FontFamily="JejuGothic-Regular" />
                    </Frame>
                    <Frame
                        Grid.Row="2"
                        BackgroundColor="#383838"
                        HorizontalOptions="Center"
                        Padding="5, 2"
                        CornerRadius="0"
                        WidthRequest="180"
                        BorderColor="Transparent">
                        <Label
                            Text="Lots of Clouds"
                            TextColor="White"
                            FontSize="14"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            FontFamily="JejuGothic-Regular" />
                    </Frame>
                    <Label
                        Grid.Row="3"
                        Text="221"
                        TextColor="#919191"
                        Margin="0, 25, 0, 0"
                        FontSize="18"
                        HorizontalOptions="End"
                        VerticalOptions="End"
                        FontFamily="JejuGothic-Regular" />
                </Grid>
            </Frame>

            <Grid 
                Grid.Column="1"
                VerticalOptions="Start"
                HorizontalOptions="StartAndExpand"
                Margin="20, 0, 0, 0">
                <Frame
                    BackgroundColor="#2C2C2C"
                    Padding="15"
                    CornerRadius="0"
                    BorderColor="#2E2E2E"
                    HasShadow="False"
                    MaximumWidthRequest="500"
                    WidthRequest="500"
                    MaximumHeightRequest="90">
                    <Grid 
                        RowDefinitions="Auto, Auto" 
                        ColumnSpacing="8"
                        ColumnDefinitions="*, *, *, *, *, *">
                        <Label Grid.Row="0" Grid.Column="0" Text="Temperatura" TextColor="#9E9E9E" HorizontalOptions="Center" FontSize="8"/>
                        <Label Grid.Row="0" Grid.Column="1" Text="Sensação" TextColor="#9E9E9E" HorizontalOptions="Center" FontSize="8"/>
                        <Label Grid.Row="0" Grid.Column="2" Text="Temp Max" TextColor="#9E9E9E" HorizontalOptions="Center" FontSize="8"/>
                        <Label Grid.Row="0" Grid.Column="3" Text="Temp Min" TextColor="#9E9E9E" HorizontalOptions="Center" FontSize="8"/>
                        <Label Grid.Row="0" Grid.Column="4" Text="Pressão" TextColor="#9E9E9E" HorizontalOptions="Center" FontSize="8"/>
                        <Label Grid.Row="0" Grid.Column="5" Text="Humidade" TextColor="#9E9E9E" HorizontalOptions="Center" FontSize="8"/>

                        <Frame Grid.Row="1" Grid.Column="0" BackgroundColor="#2F2F2F" CornerRadius="0" Padding="5" HasShadow="False" BorderColor="#2F2F2F">
                            <Label Text="28°C" TextColor="#FFF" HorizontalOptions="Center"/>
                        </Frame>
                        <Frame Grid.Row="1" Grid.Column="1" BackgroundColor="#2F2F2F" CornerRadius="0" Padding="5" HasShadow="False" BorderColor="#2F2F2F">
                            <Label Text="30°C" TextColor="#FFF" HorizontalOptions="Center"/>
                        </Frame>
                        <Frame Grid.Row="1" Grid.Column="2" BackgroundColor="#2F2F2F" CornerRadius="0" Padding="5" HasShadow="False" BorderColor="#2F2F2F">
                            <Label Text="29°C" TextColor="#FFF" HorizontalOptions="Center"/>
                        </Frame>
                        <Frame Grid.Row="1" Grid.Column="3" BackgroundColor="#2F2F2F" CornerRadius="0" Padding="5" HasShadow="False" BorderColor="#2F2F2F">
                            <Label Text="29°C" TextColor="#FFF" HorizontalOptions="Center"/>
                        </Frame>
                        <Frame Grid.Row="1" Grid.Column="4" BackgroundColor="#2F2F2F" CornerRadius="0" Padding="5" HasShadow="False" BorderColor="#2F2F2F">
                            <Label Text="1013" TextColor="#FFF" HorizontalOptions="Center"/>
                        </Frame>
                        <Frame Grid.Row="1" Grid.Column="5" BackgroundColor="#2F2F2F" CornerRadius="0" Padding="5" HasShadow="False" BorderColor="#2F2F2F">
                            <Label Text="82" TextColor="#FFF" HorizontalOptions="Center"/>
                        </Frame>
                    </Grid>
                </Frame>
            </Grid>

            <Grid 
                Grid.Column="1"
                VerticalOptions="Center"
                HorizontalOptions="Start"
                Margin="20, 10, 0, 0">
                <Frame
                    BackgroundColor="#2C2C2C"
                    Padding="10"
                    CornerRadius="0"
                    BorderColor="#2E2E2E"
                    HasShadow="False"
                    MaximumWidthRequest="230"
                    WidthRequest="230"
                    MaximumHeightRequest="90">
                    <Grid 
                        RowDefinitions="Auto, Auto" 
                        ColumnSpacing="8"
                        ColumnDefinitions="*, *, *">
                        <Label Grid.Row="0" Grid.Column="0" Text="Cidade" TextColor="#9E9E9E" HorizontalOptions="Center" FontSize="8"/>
                        <Label Grid.Row="0" Grid.Column="1" Text="Fuso-Horário" TextColor="#9E9E9E" HorizontalOptions="Center" FontSize="8"/>
                        <Label Grid.Row="0" Grid.Column="2" Text="Visibilidade" TextColor="#9E9E9E" HorizontalOptions="Center" FontSize="8"/>

                        <Frame Grid.Row="1" Grid.Column="0" BackgroundColor="#2F2F2F" CornerRadius="0" Padding="5" HasShadow="False" BorderColor="#2F2F2F">
                            <Label Text="São Paulo" TextColor="#FFF" HorizontalOptions="Center" FontSize="8.5"/>
                        </Frame>
                        <Frame Grid.Row="1" Grid.Column="1" BackgroundColor="#2F2F2F" CornerRadius="0" Padding="5" HasShadow="False" BorderColor="#2F2F2F">
                            <Label Text="-3" TextColor="#FFF" HorizontalOptions="Center"/>
                        </Frame>
                        <Frame Grid.Row="1" Grid.Column="2" BackgroundColor="#2F2F2F" CornerRadius="0" Padding="5" HasShadow="False" BorderColor="#2F2F2F">
                            <Label Text="10km" TextColor="#FFF" HorizontalOptions="Center"/>
                        </Frame>
                    </Grid>
                </Frame>
            </Grid>

            <Grid 
                Grid.Column="1"
                VerticalOptions="Center"
                HorizontalOptions="End"
                Margin="20, 10, 0, 0">

                <Grid ColumnDefinitions="Auto, Auto" ZIndex="1" BackgroundColor="Transparent" VerticalOptions="Start" HorizontalOptions="Start">
                    <Label
                        Text="Outros"
                        TextColor="#9E9E9E"
                        FontSize="10"
                        FontFamily="JejuGothic-Regular"
                        HorizontalOptions="Start"
                        TranslationX="-265"
                        Margin="0, -15, 0, 0"/>

                    <Label
                        Text="Nuvens / Chuva"
                        TextColor="#9E9E9E"
                        FontSize="10"
                        FontFamily="JejuGothic-Regular"
                        Grid.Column="1"
                        HorizontalOptions="Start"
                        TranslationX="-30"
                        Margin="0, -15, 0, 0"/>
                </Grid>

                <Frame
                    BackgroundColor="#2C2C2C"
                    Padding="10"
                    CornerRadius="0"
                    BorderColor="#2E2E2E"
                    HasShadow="False"
                    MaximumWidthRequest="230"
                    WidthRequest="230"
                    MaximumHeightRequest="90">

                    <Grid 
                        RowDefinitions="Auto, Auto" 
                        ColumnSpacing="8"
                        ColumnDefinitions="*, *">
                        <Label Grid.Row="0" Grid.Column="0" Text="Nebulosidade" TextColor="#9E9E9E" HorizontalOptions="Center" FontSize="8"/>
                        <Label Grid.Row="0" Grid.Column="1" Text="Chuva" TextColor="#9E9E9E" HorizontalOptions="Center" FontSize="8"/>

                        <Frame Grid.Row="1" Grid.Column="0" BackgroundColor="#2F2F2F" CornerRadius="0" Padding="5" HasShadow="False" BorderColor="#2F2F2F">
                            <Label Text="74%" TextColor="#FFF" HorizontalOptions="Center"/>
                        </Frame>

                        <Frame
                            Grid.Row="1"
                            Grid.Column="1"
                            Padding="0"
                            Margin="0"
                            HasShadow="False"
                            CornerRadius="3"
                            BackgroundColor="#2F2F2F"
                            BorderColor="Transparent"
                            HeightRequest="30"
                            WidthRequest="100">

                            <Grid ColumnDefinitions="Auto, *" RowDefinitions="*">
                                <Frame 
                                    BackgroundColor="#22854B"
                                    CornerRadius="0"
                                    Padding="0"
                                    BorderColor="#18762C"
                                    HasShadow="False">
                                    <Label Text="1h" TextColor="#FFF" FontSize="12" VerticalOptions="Center" HorizontalOptions="Center"/>
                                </Frame>

                                <Frame 
                                    Grid.Column="1" 
                                    BackgroundColor="#383838" 
                                    BorderColor="#2F2F2F"
                                    CornerRadius="0" 
                                    Padding="0" 
                                    HasShadow="False">
                                    <Label Text="74%" TextColor="#FFF" FontSize="12" VerticalOptions="Center" HorizontalOptions="Center"/>
                                </Frame>
                            </Grid>
                        </Frame>

                    </Grid>
                </Frame>
            </Grid>

            <Grid 
                ColumnDefinitions="2*, 2*" 
                BackgroundColor="Transparent" 
                VerticalOptions="End" 
                HorizontalOptions="End"
                Grid.Column="1"
                ZIndex="1"
                Margin="0">
                <Label
                    Text="Localização"
                    TextColor="#9E9E9E"
                    FontSize="10"
                    FontFamily="JejuGothic-Regular"
                    TranslationX="-387"
                    TranslationY="-70"
                    Margin="0, 0, 10, 0"/>

                <Label
                    Text="Vento"
                    TextColor="#9E9E9E"
                    FontSize="10"
                    FontFamily="JejuGothic-Regular"
                    Grid.Column="1"
                    TranslationX="-192"
                    TranslationY="-70"
                    Margin="10, 0, 0, 0"/>
            </Grid>


            <Grid 
                Grid.Column="2"
                VerticalOptions="End"
                HorizontalOptions="Start"
                Margin="20, 10, 0, 0">
                <Frame
                    BackgroundColor="#2C2C2C"
                    Padding="10"
                    CornerRadius="0"
                    BorderColor="#2E2E2E"
                    HasShadow="False"
                    MaximumWidthRequest="230"
                    WidthRequest="230"
                    MaximumHeightRequest="90">
                    <Grid 
                        RowDefinitions="Auto, Auto" 
                        ColumnSpacing="8"
                        ColumnDefinitions="*, *, *">
                        <Label Grid.Row="0" Grid.Column="0" Text="País" TextColor="#9E9E9E" HorizontalOptions="Center" FontSize="8"/>
                        <Label Grid.Row="0" Grid.Column="1" Text="Nascer do Sol" TextColor="#9E9E9E" HorizontalOptions="Center" FontSize="8"/>
                        <Label Grid.Row="0" Grid.Column="2" Text="Pôr do Sol" TextColor="#9E9E9E" HorizontalOptions="Center" FontSize="8"/>

                        <Frame Grid.Row="1" Grid.Column="0" BackgroundColor="#2F2F2F" CornerRadius="0" Padding="5" HasShadow="False" BorderColor="#2F2F2F">
                            <Label Text="BR" TextColor="#FFF" HorizontalOptions="Center" />
                        </Frame>
                        <Frame Grid.Row="1" Grid.Column="1" BackgroundColor="#2F2F2F" CornerRadius="0" Padding="5" HasShadow="False" BorderColor="#2F2F2F">
                            <Label Text="6:20" TextColor="#FFF" HorizontalOptions="Center"/>
                        </Frame>
                        <Frame Grid.Row="1" Grid.Column="2" BackgroundColor="#2F2F2F" CornerRadius="0" Padding="5" HasShadow="False" BorderColor="#2F2F2F">
                            <Label Text="19:30" TextColor="#FFF" HorizontalOptions="Center"/>
                        </Frame>
                    </Grid>
                </Frame>
            </Grid>

            <Grid 
                Grid.Column="2"
                VerticalOptions="End"
                HorizontalOptions="End"
                Margin="20, 10, 0, 0">
                <Frame
                    BackgroundColor="#2C2C2C"
                    Padding="10"
                    CornerRadius="0"
                    BorderColor="#2E2E2E"
                    HasShadow="False"
                    MaximumWidthRequest="230"
                    WidthRequest="230"
                    MaximumHeightRequest="90">
                    <Grid 
                        RowDefinitions="Auto, Auto" 
                        ColumnSpacing="8"
                        ColumnDefinitions="*, *">
                        <Label Grid.Row="0" Grid.Column="0" Text="Velocidade (km/h)" TextColor="#9E9E9E" HorizontalOptions="Center" FontSize="8"/>
                        <Label Grid.Row="0" Grid.Column="1" Text="Direção" TextColor="#9E9E9E" HorizontalOptions="Center" FontSize="8"/>

                        <Frame Grid.Row="1" Grid.Column="0" BackgroundColor="#2F2F2F" CornerRadius="0" Padding="5" HasShadow="False" BorderColor="#2F2F2F">
                            <Label Text="18,5" TextColor="#FFF" HorizontalOptions="Center"/>
                        </Frame>
                        <Frame Grid.Row="1" Grid.Column="1" BackgroundColor="#2F2F2F" CornerRadius="0" Padding="5" HasShadow="False" BorderColor="#2F2F2F">
                            <Label Text="Sudeste" TextColor="#FFF" HorizontalOptions="Center"/>
                        </Frame>
                    </Grid>
                </Frame>
            </Grid>
        </Grid>

    </VerticalStackLayout>
</ContentPage>