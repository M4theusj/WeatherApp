<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherApp.Views.WeatherView"
             Title="WeatherView">
    <VerticalStackLayout>
        <VerticalStackLayout Spacing="10">
            <Label Text="Digite o nome da cidade que afim consultar o clima" />
            <Entry Placeholder="Digite a cidade" Keyboard="Text" Text="{Binding Name}" />
            <Button Text="Confirmar" Command="{Binding LoadCityWeatherCommand}" CommandParameter="{Binding Name}" />
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>
